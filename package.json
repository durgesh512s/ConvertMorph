{
  "name": "docmorph",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:headed": "cypress run --headed",
    "check:headers": "grep -R \"Content-Disposition\" -n src | grep -v node_modules || true",
    "check:sw": "grep -n 'download' public/service-worker.js && grep -n 'jobId=' public/service-worker.js || true",
    "check:api": "node -e \"fetch('http://localhost:3000/api/info').then(r=>r.json()).then(x=>console.log(x)).catch(e=>console.error(e))\"",
    "lhci": "lhci autorun",
    "check:adsense": "node scripts/check-adsense.js",
    "generate:og": "npx ts-node scripts/generate-og.ts && npx ts-node scripts/generate-blog-og.ts",
    "generate:og:tools": "npx ts-node scripts/generate-og.ts",
    "generate:og:blog": "npx ts-node scripts/generate-blog-og.ts",
    "add:og-metadata": "node scripts/add-og-metadata.js",
    "tunnel": "lt --port 3000 --print-requests",
    "dev:tunnel": "concurrently \"next dev\" \"lt --port 3000 --print-requests\"",
    "og:set": "node scripts/set-site-url.js",
    "og:validators": "node scripts/validators.js",
    "prelaunch": "npm run build && npm run test && npm run lhci && echo 'âœ“ Prelaunch checks complete'"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@types/jszip": "^3.4.0",
    "@types/nodemailer": "^7.0.1",
    "@types/uuid": "^10.0.0",
    "archiver": "^7.0.1",
    "canvas": "^3.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "execa": "^9.6.0",
    "file-type": "^21.0.0",
    "framer-motion": "^12.23.12",
    "jszip": "^3.10.1",
    "lucide-react": "^0.542.0",
    "multer": "^2.0.2",
    "next": "15.5.0",
    "next-themes": "^0.4.6",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.54",
    "rate-limiter-flexible": "^7.2.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-dropzone": "^14.3.8",
    "sharp": "^0.34.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "which": "^5.0.0",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.14.6",
    "@cypress/webpack-preprocessor": "^7.0.1",
    "@eslint/eslintrc": "^3",
    "@lhci/cli": "^0.15.1",
    "@tailwindcss/postcss": "^4",
    "@types/archiver": "^6.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/which": "^3.0.4",
    "concurrently": "^9.1.0",
    "cypress": "^15.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "localtunnel": "^2.0.2",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
